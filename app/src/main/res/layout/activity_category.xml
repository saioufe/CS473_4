<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_electronic"
        android:layout_width="134dp"
        android:layout_height="0dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="44dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/btn_makeup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_clothes" android:onClick="categoryPressed"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/electronic" />

    <ImageButton
        android:id="@+id/btn_makeup"
        android:layout_width="134dp"
        android:layout_height="0dp"
        android:layout_marginBottom="299dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_food" android:onClick="categoryPressed"
        app:layout_constraintTop_toBottomOf="@+id/btn_electronic"
        app:srcCompat="@drawable/makeup" />

    <ImageButton
        android:id="@+id/btn_food"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginTop="44dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/btn_makeup"
        app:layout_constraintHorizontal_bias="0.5" android:onClick="categoryPressed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_electronic"
        app:srcCompat="@drawable/food" />

    <ImageButton
        android:id="@+id/btn_clothes"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginBottom="44dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:onClick="categoryPressed"
        app:layout_constraintBottom_toTopOf="@+id/btn_food"
        app:layout_constraintEnd_toStartOf="@+id/btn_electronic"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/clothes"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:text="Clothes"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_food"
        app:layout_constraintTop_toBottomOf="@+id/btn_clothes" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="Electronic"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_makeup"
        app:layout_constraintTop_toBottomOf="@+id/btn_electronic" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="24dp"
        android:text="Food"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btn_food"
        app:layout_constraintTop_toBottomOf="@+id/btn_food" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="26dp"
        android:text="Makeup"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_makeup"
        app:layout_constraintTop_toBottomOf="@+id/btn_makeup" />
</androidx.constraintlayout.widget.ConstraintLayout>